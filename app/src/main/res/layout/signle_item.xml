<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4pt"
    app:cardElevation="3pt"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="5pt">
        <androidx.cardview.widget.CardView
            android:id="@+id/imgHolder"
            android:layout_width="120dp"
            android:layout_height="90dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="1pt"
            app:cardCornerRadius="2pt"
            android:layout_marginHorizontal="4pt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:id="@+id/img"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_marginStart="2pt"
            android:id="@+id/title"
            tools:text="Dipa Halder"
            android:textColor="#0B24C3"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imgHolder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/description"
            app:layout_constraintTop_toTopOf="@+id/imgHolder"/>
        <TextView
            android:layout_marginStart="2pt"
            android:id="@+id/description"
            android:layout_width="0dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/imgHolder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/imgHolder"
            app:layout_constraintTop_toBottomOf="@+id/title"
            tools:text="Its me and you?"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/views"
            tools:text="1000"
            android:textColor="#0B24C3"
            android:layout_marginTop="4pt"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12pt"
            android:layout_marginEnd="3pt"
            app:layout_constraintTop_toBottomOf="@id/imgHolder"
            app:layout_constraintStart_toStartOf="parent"
            />
        <ImageView
            app:layout_constraintStart_toEndOf="@+id/views"
            app:layout_constraintTop_toTopOf="@+id/views"
            app:layout_constraintBottom_toBottomOf="@id/views"
            android:layout_marginHorizontal="3pt"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/eye"/>
        <TextView
            android:id="@+id/likes"
            tools:text="100"
            android:layout_marginTop="4pt"
            android:textColor="#0B24C3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3pt"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/likeImg"
            app:layout_constraintTop_toBottomOf="@id/imgHolder"
            />
        <ImageView
            android:id="@+id/likeImg"
            app:layout_constraintTop_toTopOf="@+id/likes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/likes"
            android:layout_marginEnd="12pt"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/likes"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
